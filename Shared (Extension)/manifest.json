{
    "manifest_version": 3,
    "name": "Telegram Channel Blocker",
    "version": "1.0",
    "description": "Block specific Telegram channels from loading",
    
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    
    "host_permissions": [
        "*://t.me/*",
        "*://telegram.org/*",
        "*://web.telegram.org/*",
        "*://*.telegram.org/*",
        "file:///*"
    ],
    
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    
    "content_scripts": [{
        "matches": [
            "*://t.me/*",
            "*://telegram.org/*",
            "*://web.telegram.org/*",
            "*://*.telegram.org/*"
        ],
        "js": ["content.js"],
        "run_at": "document_start",
        "all_frames": true
    }],
    
    "action": {
        "default_popup": "popup 2.html",
        "default_title": "Telegram Channel Blocker"
    },
    
    "web_accessible_resources": [{
        "resources": ["*"],
        "matches": [
            "*://t.me/*",
            "*://telegram.org/*",
            "*://web.telegram.org/*",
            "*://*.telegram.org/*"
        ]
    }]
}