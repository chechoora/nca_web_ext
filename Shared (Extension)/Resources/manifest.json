{
    "manifest_version": 3,

    "name": "Telegram Channel Blocker",
    "description": "Block unwanted Telegram channels from opening and viewing",
    "version": "1.0",

    "icons": {
        "48": "images/icon-48.png",
        "96": "images/icon-96.png",
        "128": "images/icon-128.png",
        "256": "images/icon-256.png",
        "512": "images/icon-512.png"
    },

    "background": {
        "scripts": [ "background.js" ],
        "type": "module"
    },

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ 
            "*://*.telegram.org/*",
            "*://web.telegram.org/*",
            "*://t.me/*"
        ]
    }],

    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ 
        "storage",
        "activeTab",
        "tabs"
    ]
}
